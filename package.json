{
    "name": "chayns-components",
    "version": "5.0.0-beta.0",
    "description": "A set of beautiful React components for developing your own applications with chayns.",
    "main": "index.js",
    "workspaces": [
        "packages/*"
    ],
    "sideEffects": false,
    "scripts": {
        "storybook": "storybook dev -p 6006",
        "build:storybook": "storybook build",
        "lerna:version": "lerna version --no-push",
        "lerna:build": "lerna run build",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "organize-imports-cli",
            "prettier --write"
        ],
        "*.{css,html,json,md,scss}": "prettier --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TobitSoftware/chayns-components.git"
    },
    "keywords": [
        "chayns",
        "react",
        "components"
    ],
    "author": "Tobit.Software",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TobitSoftware/chayns-components/issues"
    },
    "homepage": "https://github.com/TobitSoftware/chayns-components#readme",
    "browserslist": [
        ">0.5%",
        "not dead",
        "not op_mini all",
        "not IE 11"
    ],
    "devDependencies": {
        "@babel/cli": "^7.24.1",
        "@babel/core": "^7.24.4",
        "@babel/preset-env": "^7.24.4",
        "@babel/preset-react": "^7.24.1",
        "@babel/preset-typescript": "^7.24.1",
        "@chayns-toolkit/eslint-config": "^2.0.2",
        "@storybook/addon-actions": "^7.6.17",
        "@storybook/addon-essentials": "^7.6.17",
        "@storybook/addon-links": "^7.6.17",
        "@storybook/addon-mdx-gfm": "^7.6.17",
        "@storybook/react": "^7.6.17",
        "@storybook/react-webpack5": "^7.6.17",
        "@types/uuid": "^9.0.8",
        "babel-loader": "^9.1.3",
        "eslint": "^8.57.0",
        "eslint-plugin-storybook": "^0.8.0",
        "husky": "^8.0.3",
        "lerna": "^8.1.2",
        "organize-imports-cli": "^0.10.0",
        "prettier": "^3.2.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "storybook": "^7.6.17",
        "typescript": "^5.4.4"
    }
}
