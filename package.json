{
    "name": "chayns-components",
    "version": "5.0.0-beta.0",
    "description": "A set of beautiful React components for developing your own applications with chayns.",
    "main": "index.js",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "storybook": "start-storybook -p 6006",
        "build:storybook": "build-storybook",
        "lerna:version": "lerna version --no-push",
        "lerna:build": "lerna run build",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "organize-imports-cli",
            "prettier --write"
        ],
        "*.{css,html,json,md,scss}": "prettier --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TobitSoftware/chayns-components.git"
    },
    "keywords": [
        "chayns",
        "react",
        "components"
    ],
    "author": "Tobit.Software",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TobitSoftware/chayns-components/issues"
    },
    "homepage": "https://github.com/TobitSoftware/chayns-components#readme",
    "devDependencies": {
        "@babel/cli": "^7.22.9",
        "@babel/core": "^7.22.9",
        "@babel/preset-env": "^7.22.9",
        "@babel/preset-react": "^7.22.5",
        "@babel/preset-typescript": "^7.22.5",
        "@chayns-toolkit/eslint-config": "^2.0.2",
        "@storybook/addon-actions": "^6.5.16",
        "@storybook/addon-essentials": "^6.5.16",
        "@storybook/addon-links": "^6.5.16",
        "@storybook/react": "^6.5.16",
        "@types/uuid": "^9.0.2",
        "babel-loader": "^8.3.0",
        "eslint": "^7.32.0",
        "eslint-plugin-storybook": "^0.6.13",
        "husky": "^8.0.3",
        "lerna": "^7.1.4",
        "organize-imports-cli": "^0.10.0",
        "prettier": "^2.8.8",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@chayns/colors": "^2.0.0",
        "uuid": "^9.0.0"
    }
}
